<div class="contacts__form-container mini-form">
        <form method="POST" action="/contacts" class="form">
            <div class="form__top-container">
                <div class="form__input-container">
                    <input name="company" placeholder="Company" type="text" id="company" class="form__text-input" />
                    <label class="form__label" for="company">Company</label>                    
                </div>
                <div class="form__input-container">
                    <input name="email" placeholder="Email*" type="email" id="email" class="form__text-input" required />
                    <label class="form__label" for="email">Email</label>
                </div>
                <div class="form__input-container">
                    <input name="first_name" placeholder="First Name*" type="text" id="first_name" class="form__text-input" required />
                    <label class="form__label" for="first_name">First Name</label>
                </div>
                <div class="form__input-container">
                    <input name="last_name" placeholder="Last Name*" type="text" id="last_name" class="form__text-input" required />
                    <label class="form__label" for="last_name">Last Name</label>
                </div>
            </div>
            <div class="form__bottom-container">
                <div class="form__input-container">
                    <textarea name="message" id="message" cols="30" rows="10" class="form__textarea" placeholder="How can we help you?"></textarea>
                    <label class="form__label" for="message">How can we help you?</label>
                </div>
                <div class="form__checkbox-container form__checkbox-container--privacy">
                    <input class="form__checkbox" type="checkbox" name="privacy_consent" id="privacy_consent" />
                    <div class="">
                        <label class="form__checkbox-label form__checkbox-label--privacy" for="privacy_consent"><span class="form__checkbox--span"><span class="form__checkbox--span--fill"></span></span><span class="form__privacy-label--text">I have read and agree to the privacy policy and to the terms and conditions.<span class="red">*</span></span></label>
                    </div>
                </div>
                <div class="form__checkbox-container form__checkbox-container--promotion">
                    <input class="form__checkbox" type="checkbox" name="promotional_consent" id="promotional_consent" />
                    <div class="">
                        <label class="form__checkbox-label form__checkbox-label--privacy" for="promotional_consent"><span class="form__checkbox--span"><span class="form__checkbox--span--fill"></span></span><span class="form__privacy-label--text form__privacy-label--promotion">I would also like to receive information about additional products or services that may be of interest to me. Information submitted through this form is subject to our privacy policy.</span></label>
                    </div>
                </div>
            </div>
            <button class="main-button form__submit">Submit</button>
        </form>
    </div>